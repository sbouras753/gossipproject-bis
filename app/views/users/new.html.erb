<!-- On inclus le contenu dans un row et une colonne pour limiter la largeur -->
<div class="container">
	<div class="row">
		<div class="col-6 mx-auto">
			<!-- Le titre de la page -->
			<h3 class="card-title text-center m-4">Je m'inscris</h3>


			<!-- Zone du formulaire -->
			<%= form_tag url_for(action: 'create'), method: "post" do %>

			<%= label_tag 'Prénom' %>
			<%= text_field_tag 'Prénom', nil, class: "form-control mb-3" %>

			<%= label_tag 'Nom' %>
			<%= text_field_tag 'Nom', nil, class: "form-control mb-3"  %>

			<%= label_tag 'Description' %>
			<%= text_area_tag 'description', nil, class: "form-control mb-3"  %>

			<%= label_tag 'Email' %>
			<%= text_field_tag 'email', nil, class: "form-control mb-3"  %>

			<%= label_tag 'Age' %>
			<%= text_field_tag 'age', nil, class: "form-control mb-3"  %>

			<%= label_tag 'Ville' %>
			<%= text_field_tag 'city', nil, class: "form-control mb-3"  %>

			<%= label_tag 'Code postal' %>
			<%= text_field_tag 'zip_code', nil, class: "form-control mb-3"  %>

			<%= label_tag 'Mode de passe' %>
			<%= password_field_tag 'password', nil, class: "form-control mb-3"  %>

			<%= label_tag 'Confirme ton mot de passe' %>
			<%= password_field_tag 'password_confirmation', nil, class: "form-control mb-3"  %>

			<%= submit_tag "Je m'inscris", class: "btn btn-primary" %>

			<% end %>

			<!-- Pour afficher les erreurs possibles -->
			<% if @user.errors.any? %>

			<div class="alert alert-danger alert-dismissible fade show m-4" role="alert">
				<p><strong>Il est pas possible de t'enregistrer </strong></p>
				<ul>
					<% @user.errors.full_messages.each do |message| %>
					<li><%= message %></li>
					<button type="button" class="close" data-dismiss="alert" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
					<% end %>
				</ul>
			</div>

			<% end %>

		</div>
	</div>
</div>
