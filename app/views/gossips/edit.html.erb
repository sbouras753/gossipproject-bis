<!-- On inclus le contenu dans un row et une colonne pour limiter la largeur -->
<div class="container">
	<div class="row">
		<div class="col-6 mx-auto">
			<!-- Le titre de la page -->
			<h3 class="card-title text-center m-4">Edite un gossip</h3>

			<!-- Zone du formulaire -->
			<%= form_tag url_for(action: 'update'), method: "patch" do %>
			
			<%= label_tag 'Title' %>
			<%= text_field_tag 'title',  @gossip.title, class: "form-control" %>
			<br/>

			<%= label_tag 'Content' %>
			<%= text_area_tag 'content', @gossip.content, class: "form-control" %>
			<br/>

			<%= submit_tag "Confirm", class: "btn btn-primary" %>

			<% end %>

			<!-- Pour afficher les erreurs possibles -->
			<% if @gossip.errors.any? %>

			<div class="alert alert-danger alert-dismissible fade show m-4" role="alert">
				<p><strong>Il est pas possible d'Ã©diter ce gossip</strong></p>
				<ul>
					<% @gossip.errors.full_messages.each do |message| %>
					<li><%= message %></li>
					<button type="button" class="close" data-dismiss="alert" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
					<% end %>
				</ul>
			</div>

			<% end %>

		</div>
	</div>
</div>

